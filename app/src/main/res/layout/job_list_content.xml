<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pandajob_list_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18sp"
            android:id="@+id/pandajob_list_item_orderdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:text="22.00.2016"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:textSize="18sp"
            android:id="@+id/pandajob_list_item_customername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pandajob_list_item_orderdate"
            android:layout_margin="@dimen/text_margin"
            android:text="CustomerName"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/pandajob_list_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="ORDERID"
            android:textSize="18sp"
            android:textAppearance="?attr/textAppearanceListItem" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:paddingBottom="@dimen/text_margin"
        android:paddingRight="@dimen/text_margin">

        <TextView
            android:id="@+id/pandajob_list_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="2.5KM"
            android:textAppearance="?attr/textAppearanceListItemSmall"
            android:textSize="12sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/pandajob_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/text_margin_small"
            android:text="$ 60.00"
            android:textAppearance="?attr/textAppearanceListItemSmall"
            android:textSize="12sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/pandajob_list_item_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/text_margin_small"
            android:text="wiretransfer"
            android:textAppearance="?attr/textAppearanceListItemSmall"
            android:textSize="12sp"
            android:textStyle="italic|bold" />
    </LinearLayout>

</LinearLayout>